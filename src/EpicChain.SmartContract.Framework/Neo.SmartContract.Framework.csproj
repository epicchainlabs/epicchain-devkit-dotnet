<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <AssemblyTitle>EpicChain.SmartContract.Framework</AssemblyTitle>
    <AssemblyName>EpicChain.SmartContract.Framework</AssemblyName>
    <PackageId>EpicChain.SmartContract.Framework</PackageId>
    <Description>EpicChain.SmartContract.Framework</Description>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <Compile Update="**/*.cs">
      <Pack>true</Pack>
      <PackagePath>src</PackagePath>
    </Compile>
  </ItemGroup>

</Project>
